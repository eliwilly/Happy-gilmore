<script>
(function() {
  const statusEl = document.getElementById('status');
  const outputEl = document.getElementById('output');
  const happyBtn = document.getElementById('happySwing');
  const normalBtn = document.getElementById('normalSwing');

  function randRange(min, max) {
    return Math.floor(Math.random() * (max - min + 1)) + min;
  }

  let holeDistance = randRange(300, 450);
  let strokes = 0;
  let position = 0;
  let gameOver = false;

  function log(msg) {
    outputEl.textContent += msg + "\\n";
    outputEl.scrollTop = outputEl.scrollHeight;
  }

  function resetGame() {
    holeDistance = randRange(300, 450);
    strokes = 0;
    position = 0;
    gameOver = false;
    outputEl.textContent = "";
    statusEl.textContent = `The hole is ${holeDistance} yards away. Try to reach it in as few shots as possible!\\n`;
  }

  function happySwing() {
    const base = randRange(100, 300);
    const chaos = randRange(-50, 50);
    return base + chaos;
  }

  function normalSwing() {
    const base = randRange(80, 150);
    const accuracy = randRange(-10, 10);
    return base + accuracy;
  }

  function takeShot(swingType) {
    if (gameOver) return;
    let distance = 0;
